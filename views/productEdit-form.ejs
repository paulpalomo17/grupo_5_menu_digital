<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head', {title: 'Edicion'}) %>
<body>
    <!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
    <section class="main-edit-form">
        <div class="form">
            <h2>Formulario de edición de producto</h2>
            <!-- Formulario -->
            <form action="/products/<%= productToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="create-form" id="create-form"> 
                <div class="control-form">
                    <label for="name">Nombre</label>
                    <input type="text" name="name" id="name" class="control" placeholder="Ej: Pizza doble queso" value="<%= productToEdit.name %>"> 
                </div>
                <div class="control-form">
                    <label for="description">Descripción</label>
					<textarea name="description" id="description" class="control"><%= productToEdit.description %></textarea>
                </div>
                <div class="control-form">
                    <label for="image">- Seleccionar una imagen para el producto - </label>
                    <input type="file" name="image" accept=".jpg, .png">
                </div>
                <div class="control-form">
                    <label for="category">Categoría</label>
                    <select name="category" id="category" class="control">
                        <option value=''>- Seleccione categoria - </option>
                        <% for( const oneCategory of allCategory ) { %>
                            <option value="<%= oneCategory.id %>" 
                            <%= (oneCategory.id == productToEdit.category_id) ? 'selected' : null %>    
                            ><%= oneCategory.name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="control-form">
                    <label for="type">Tipo</label>
                    <select name="type" id="type" class="control">
                        <% for( const oneType of allType ) { %>
                            <option value="<%= oneType.id %>" 
                            <%= (oneType.id == productToEdit.type_id) ? 'selected' : null %>    
                            ><%= oneType.name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="control-form">
                    <label for="price">Precio</label>
                    <input type="text" id="price" name="price" placeholder="Ej: 5678" class="control" value="<%= productToEdit.price %>">
                </div>
                <div class="control-boton">
                    <button type="submit" class="boton-form">Actualizar producto</button>
                </div>  
            </form>
        </div>
    </section>
    <!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>
</html>