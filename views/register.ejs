<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head', {title: 'Registro'}) %>
<body>
    <!-- Header -->
	<%- include('partials/headerNavbar', {title: 'Registro'}) %>
	<!-- /Header -->
    <section class="main-form">
        <div class="form-img">
            <img src="/images/hamburguesa-register.jpg" alt="logo-hamburguesa">
        </div>
        <div class="form">
            <h2>REGISTRO</h2>
            <!-- Formulario -->
            <form action="/users" method="POST" enctype="multipart/form-data" class="create-form" id="login-form"> 
                <div class="control-form">
                    <label for="firstName">Nombre</label>
                    <input type="text" name="firstName" id="firstName" minlength="3" maxlength="20" class="control"> 
                </div>
                <div class="control-form">
                    <label for="lastName">Apellido</label>
                    <input type="text" name="lastName" id="lastName" minlength="3" maxlength="20" class="control"> 
                </div>
                <div class="control-form">
                    <label for="email">Correo</label>
                    <input type="email" name="email" id="email" class="control"> 
                </div>
                <div class="control-form">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" id="password" minlength="8" class="control"> 
                </div>
                <div class="control-form">
                    <label for="category">Categoría</label>
                    <select name="category" id="category" class="control">
                        <option value="">Elegí</option>
                        <option value="member">Miembro</option>
                        <option value="admin">Administrador</option>
                    </select>
                </div>
                <div class="control-form">
                    <label for="image">Seleccionar una imagen para el usuario</label>
                    <input type="file" name="image" accept=".jpg, .png">
                </div>
                <div class="control-checkbox">
                    <input type="checkbox" name="terminos" id="terminos">
                    <label for="terminos">Acepto los términos y condiciones.</label>
                </div>
                <div class="control-boton">
                    <button type="submit" class="boton-form">Registrarse</button>
                </div>  
                <div class="contenedor">
                    <div class="divider">
                        or
                    </div>
                </div>
                <div>
                    <div class="accesos">
                        <i class="fa-brands fa-google"></i>
                        <i class="fa-brands fa-facebook"></i>
                        <i class="fa-brands fa-twitter"></i>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>
</html>