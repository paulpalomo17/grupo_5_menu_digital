<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head', {title: 'Perfil'}) %>
<body>
    <!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
    <h1 class="titulo-perfil">Perfil de Usuario</h1>
    <section class="container-profile">
        <img src="/images/users/<%= user.image %>" alt="imagen de perfil">
        <div>
            <h3>Nombre: <%= user.first_name %></h3>
            <h3>Apellido: <%= user.last_name %></h3>
            <h3>Email: <%= user.email %></h3>
            <h3>Categoria: <%= user.categories_users.name %></h3>
            <a href="/users/<%= user.id %>/edit">Editar</a>
        </div>
    </section>
    <!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>
</html>
